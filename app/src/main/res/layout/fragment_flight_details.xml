<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_primary">

    <TextView
        android:id="@+id/flightTitleTextView"
        android:layout_width="336dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:text="Your flight search detail:"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flightDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Flight details :"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="@id/flightTitleTextView"
        app:layout_constraintTop_toBottomOf="@id/flightTitleTextView" />

    <TextView
        android:id="@+id/flightNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Flight number"

        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/flightDetailsTextView"
        app:layout_constraintTop_toBottomOf="@id/flightDetailsTextView" />


    <TextView
        android:id="@+id/destinationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:text="Destination"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/flightNumberTextView"
        app:layout_constraintTop_toBottomOf="@id/flightNumberTextView" />

    <TextView
        android:id="@+id/terminalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Terminal"

        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/destinationTextView"
        app:layout_constraintTop_toBottomOf="@+id/destinationTextView" />


    <TextView

        android:id="@+id/delayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Delay"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/terminalTextView"
        app:layout_constraintTop_toBottomOf="@+id/terminalTextView" />

    <TextView

        android:id="@+id/gateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Gate"

        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/delayTextView"
        app:layout_constraintTop_toBottomOf="@+id/delayTextView" />


    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:onClick="onSaveButtonClicked"
        android:text="SAVE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gateTextView" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:onClick="onDeleteButtonClicked"
        android:text="DELETE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gateTextView" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="407dp"
        android:layout_height="227dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/saveButton"

        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/flight2" />


</androidx.constraintlayout.widget.ConstraintLayout>

